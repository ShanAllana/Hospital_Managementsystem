@model IEnumerable<Project_Hospital.Models.Visits>

@{
    ViewBag.Title = "Index";
}

<h2>Visits</h2>

<ul class="nav navbar-nav">
    <li>@Html.ActionLink("Home", "Index", "Home")</li>
    <li>@Html.ActionLink("Doctors", "Index", "Doctors")</li>
    <li>@Html.ActionLink("Patients", "Index", "Patients")</li>
    <li>@Html.ActionLink("Visits", "Index", "Visits")</li>
</ul>
<br />
<br />
<hr />
<br />


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
       
        <th>
            Date Of Visit
        </th>
        <th>
            Complaint
        </th>
        <th>
            Doctor
        </th>
        <th>
            Patient
            @*@Html.DisplayNameFor(model => model.PatientID)*@
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.DateOfVisit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Complaint)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.DoctorName)*@
            @Html.ActionLink(item.DoctorName, "Details", "Doctors",
                     new { id = item.DoctorID }, null)

        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.PatientName)*@
            @Html.ActionLink(item.PatientName, "Details", "Patients",
                     new { id = item.PatientID }, null)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
